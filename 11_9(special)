/*11_9.多選一-3N+1-2(10.0)*/
#include <stdio.h>
int main(){
    int i,j,a,n=0;
    scanf("%d %d",&i,&j);
    for(;j<=i;j++){
        a=j;
        while(a){
            printf("%d ",a);
            if(a%2!=0){
                a=3*a+1;
            }
            else{
                a=a/2;
            }
            n=n+1;
            if(a==1){
                a=0;
                printf("1");
            }
        }
        printf("\n迴圈次數%d\n",n);
        n=0;
    }
	return 0;
}
